extends layout.pug 

block content 
    .container 
        .row.text-center.mb-4
            .col
                h1 Rentals 
    .container
        .row
            if user
                // Rental form for authenticated users
                form(action="/rentals", method="POST")
                    .form-group
                        label(for="firstName") First Name:
                        input#firstName.form-control(type="text", name="firstName", value=user.first_name, required)
                    .form-group
                        label(for="lastName") Last Name:
                        input#lastName.form-control(type="text", name="lastName", value=user.last_name, required)
                    .form-group
                        label(for="email") Email:
                        input#email.form-control(type="email", name="email", value=user.email, required)
                    .form-group
                        label(for="equipment") Equipment:
                        select#equipment.form-control(name="equipment", required)
                            each equipment in equipmentOptions
                                option(value=equipment.id)= equipment.name
                    button.btn.btn-primary(type="submit") Submit Rental
            else 
                // Sign-in button for non-authenticated users
                a.btn.btn-primary.btn-lg(href='/auth/google') Please sign in to make rental
